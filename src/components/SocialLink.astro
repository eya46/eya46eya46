---
import { Image } from "astro:assets";
import { type ImageMetadata } from "astro";
import { Link } from "../icons";

interface Props {
  href?: string;
  icon: ImageMetadata;
  name: string;
}

const { href, icon, name } = Astro.props;
---

<div class="my-2 flex items-center space-x-2">
  <Image alt={name} class="size-8 select-none" src={icon} />

  <p class="my-0 font-semibold select-all">
    {name}
  </p>
  {
    href ? (
      <a class="font-semibold text-sky-800 underline-offset-4 hover:underline" href={href} target="_blank">
        <slot />
        {!href ? null : <Image alt={`前往${name}`} class="inline" src={Link} />}
      </a>
    ) : (
      <p class="font-semibold text-sky-800">
        <slot />
      </p>
    )
  }
</div>
